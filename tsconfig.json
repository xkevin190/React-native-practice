{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2021",
    "module": "ES2015",
    "noImplicitAny": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "es2021"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "noEmit": true,
    "allowJs": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.confing.js"
  ]
}